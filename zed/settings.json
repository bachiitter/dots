{
	"git_panel": {
		"dock": "right"
	},
	"assistant": {
		"version": "2",
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-3-5-sonnet-latest"
		}
	},
	"theme": "poimandres storm",
	"ui_font_family": "BlexMono Nerd Font",
	"ui_font_size": 13,
	"buffer_font_size": 11.5,
	"buffer_font_family": "BlexMono Nerd Font",
	"buffer_font_weight": 400,
	"buffer_line_height": {
		"custom": 2.25
	},
	"relative_line_numbers": true,
	"use_autoclose": true,
	"tab_size": 2,
	"cursor_blink": false,
	"preferred_line_length": 90,
	"scrollbar": {
		"show": "never"
	},
	"git": {
		"inline_blame": {
			"enabled": true,
			"delay_ms": 500,
			"show_commit_summary": false
		}
	},
	"telemetry": {
		"diagnostics": true,
		"metrics": false
	},
	"outline_panel": {
		"button": true,
		"dock": "right"
	},
	"calls": {
		"share_on_join": false
	},
	"chat_panel": {
		"button": "never"
	},
	"collaboration_panel": {
		"button": false
	},
	"project_panel": {
		"dock": "right"
	},
	"terminal": {
		"font_family": "BlexMono Nerd Font",
		"alternate_scroll": "off",
		"blinking": "off",
		"copy_on_select": true,
		"line_height": {
			"custom": 1.75
		},
		"toolbar": {
			"title": true
		},
		"env": {
			"GIT_EDITOR": "zed --wait"
		},
		"working_directory": "current_project_directory"
	},
	"features": {
		"copilot": true,
		"edit_prediction_provider": "none"
	},
	"tab_bar": {
		"show": false
	},
	"toolbar": {
		"breadcrumbs": true,
		"selections_menu": false,
		"quick_actions": false
	},
	"vim_mode": true,
	"lsp": {
		"gopls": {
			"initialization_options": {
				"usePlaceholders": false,
				// "buildFlags": ["-tags=debug"],
				"completeUnimported": false,
				"experimentalPostfixCompletions": true,
				"hints": {
					"assignVariableTypes": false,
					"compositeLiteralFields": false,
					"compositeLiteralTypes": false,
					"constantValues": true,
					"functionTypeParameters": true,
					"parameterNames": true,
					"rangeVariableTypes": true
				}
			}
		},
		"tailwindcss-language-server": {
			"settings": {
				"experimental": {
					"classRegex": [
						["cva\\(([^)]*)\\)", "[\"'`]?([^\"'`]+)[\"'`]?"],
						["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
					]
				}
			}
		},
		"biome": {
			"settings": {
				"require_config_file": false
			}
		}
	},
	"vim": {
		"use_system_clipboard": "always",
		"use_multiline_find": true
	},
	"preview_tabs": {
		"enabled": false,
		"enable_preview_from_code_navigation": false
	},
	"inlay_hints": {
		"enabled": false
	},
	"dev": {
		"vertical_scroll_margin": 0,
		"scroll_beyond_last_line": "off",
		"inline_completions": {
			"disabled_globs": [".env", "*.md", "*.json"]
		}
	},
	"formatter": {
		"language_server": {
			"name": "biome"
		}
	},
	"code_actions_on_format": {
		"source.fixAll.biome": true,
		"source.organizeImports.biome": true
	}
}
